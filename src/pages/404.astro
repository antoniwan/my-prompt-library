---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/PageHeader.astro";
import ButtonPrimary from "../components/ButtonPrimary.astro";
import { SITE_NAME } from "../data/site";
import { home, promptsIndex } from "../utils/urls";
---

<Layout
  title={`Page not found — ${SITE_NAME}`}
  description="The page you’re looking for doesn’t exist. Browse the prompt library or return home."
  noindex
>
  <PageHeader title="Page not found" description="The page you’re looking for doesn’t exist." />

  <p class="mb-6 text-sm text-[var(--color-muted)]">
    The URL may be incorrect, or this page may have been moved. You can return to the homepage or
    jump straight into the prompt library.
  </p>

  <div class="flex flex-wrap gap-3">
    <ButtonPrimary href={home()}> ← Back to home </ButtonPrimary>
    <a
      href={promptsIndex()}
      class="inline-flex items-center rounded-lg border border-[var(--color-border)] bg-[var(--color-surface)] px-4 py-2.5 text-sm font-medium text-[var(--color-foreground)] no-underline hover:border-[var(--color-accent)] hover:text-[var(--color-accent)] focus-visible:border-[var(--color-accent)] focus-visible:text-[var(--color-accent)]"
    >
      Browse prompts
    </a>
  </div>
</Layout>
