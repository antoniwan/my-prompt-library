---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<header class="mb-8">
  <h1 class="text-2xl font-semibold tracking-tight text-[var(--color-foreground)] sm:text-3xl">
    {title}
  </h1>
  {(description || Astro.slots.has("default")) && (
    <div class="mt-2 text-sm text-[var(--color-muted)]">
      {description && <p class="m-0">{description}</p>}
      <slot />
    </div>
  )}
</header>
