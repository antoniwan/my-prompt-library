---
interface Props {
  href: string;
  size?: "sm" | "md";
}

const { href, size = "md" } = Astro.props;
const sizeClasses =
  size === "sm" ? "px-3 py-2 text-sm" : "px-4 py-2.5 text-sm";
---

<a
  href={href}
  class={`inline-flex items-center rounded-lg bg-[var(--color-accent)] ${sizeClasses} font-medium text-white no-underline transition-opacity hover:opacity-90 focus-visible:opacity-90`}
>
  <slot />
</a>

